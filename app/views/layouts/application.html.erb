<!DOCTYPE html>
<html>
  <head>
    <title>Sinterest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <%= render 'layouts/navigation', categories: @categories %>

    

    <% if flash[:errors] %>
      <% flash[:errors].each do |e| %>
      <p style="color: red;"> <%= e %> </p>
        <% end %>
    <% end %>

    <div>
     <% if logged_in? %>
       <p> You are logged in as <%= link_to current_user.name, root_path %> </p>
       <p> <%= link_to "Log out", logout_path, method: "post" %> </p>

      <% else %>
       <p> You are not logged in. </p>
       <p> <%= link_to "Log in?", login_path %> </p>
       <p> or </p>
       <p> <%= link_to "Sign up?", signup_path %> </p>
     <% end %>
   </div>

    <% if flash[:authorized] %>
     <p> <%= flash[:authorized] %> </p>
    <% end %>


    <%= yield %>
  </body>
</html>
